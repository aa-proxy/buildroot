#!/bin/sh
#
# Start btattach daemon
#


DAEMON="btattach"
PIDFILE="/var/run/$DAEMON.pid"
BTATTACH_ARGS="-B /dev/@BT_UART_DEV@ -S @BT_UART_BAUDRATE@"

RETVAL=0

case "$1" in
	start)
		printf "Starting $DAEMON: "
		start-stop-daemon -S -b -q -m -p "$PIDFILE" -x "/usr/bin/$DAEMON" -- $BTATTACH_ARGS
		RETVAL=$?
		[ $RETVAL = 0 ] && echo "OK" || echo "FAIL"
		;;
	stop)
		printf "Stopping $DAEMON: "
		start-stop-daemon -K -q -p "$PIDFILE"
		RETVAL=$?
		[ $RETVAL = 0 ] && echo "OK" || echo "FAIL"
		;;
	restart)
		$0 stop
		$0 start
		;;
	*)
		echo "Usage: $0 {start|stop}"
		;;
esac

exit $RETVAL
