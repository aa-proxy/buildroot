#!/bin/sh
#
# Start rtk_hciattach
#

DAEMON="rtk_hciattach"
PIDFILE="/var/run/$DAEMON.pid"

RETVAL=0

case "$1" in
	start)
		printf "Starting $DAEMON: "
		/usr/sbin/rfkill unblock bluetooth
		start-stop-daemon -S -b -q -m -p "$PIDFILE" -x "/usr/bin/$DAEMON" -- -n -s @BT_UART_BAUDRATE@ /dev/@BT_UART_DEV@ rtk_h5 @BT_UART_BAUDRATE@ flow nosleep
		RETVAL=$?
		[ $RETVAL = 0 ] && echo "OK" || echo "FAIL"
		;;
	stop)
		printf "Stopping $DAEMON: "
		start-stop-daemon -K -q -p "$PIDFILE"
		RETVAL=$?
		[ $RETVAL = 0 ] && echo "OK" || echo "FAIL"
		;;
	*)
		echo "Usage: $0 {start|stop}"
		;;
esac

exit $RETVAL
